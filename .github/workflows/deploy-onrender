name: Deploy Monorepo to Render (Docker)

on:
  push:
    branches:
      - main

env:
  NODE_VERSION: 18

jobs:
  deploy-server:
    name: Build & Deploy Server
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Setup Docker
        uses: docker/setup-buildx-action@v3

      - name: Build Server Docker Image
        working-directory: ./server
        run: |
          docker build -t server-prod --build-arg NODE_ENV=production .

      - name: Login to Render Container Registry
        run: |
          echo "${{ secrets.RENDER_API_KEY }}" | docker login registry.render.com -u _ --password-stdin

      - name: Tag & Push Server Image
        run: |
          docker tag server-prod registry.render.com/${{ secrets.RENDER_SERVICE_ID_SERVER }}:latest
          docker push registry.render.com/${{ secrets.RENDER_SERVICE_ID_SERVER }}:latest

      - name: Trigger Render Deployment
        run: |
          curl -X POST \
            -H "Accept: application/json" \
            -H "Authorization: Bearer ${{ secrets.RENDER_API_KEY }}" \
            https://api.render.com/deploy/${{ secrets.RENDER_SERVICE_ID_SERVER }}

  deploy-client:
    name: Build & Deploy Client
    runs-on: ubuntu-latest
    needs: deploy-server
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Setup Docker
        uses: docker/setup-buildx-action@v3

      - name: Build Client Docker Image
        working-directory: ./client
        run: |
          docker build -t client-prod --build-arg NODE_ENV=production .

      - name: Login to Render Container Registry
        run: |
          echo "${{ secrets.RENDER_API_KEY }}" | docker login registry.render.com -u _ --password-stdin

      - name: Tag & Push Client Image
        run: |
          docker tag client-prod registry.render.com/${{ secrets.RENDER_SERVICE_ID_CLIENT }}:latest
          docker push registry.render.com/${{ secrets.RENDER_SERVICE_ID_CLIENT }}:latest

      - name: Trigger Render Deployment
        run: |
          curl -X POST \
            -H "Accept: application/json" \
            -H "Authorization: Bearer ${{ secrets.RENDER_API_KEY }}" \
            https://api.render.com/deploy/${{ secrets.RENDER_SERVICE_ID_CLIENT }}
